@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <div id="roomsContainer">
        <div>
            <label for="roomName">Room Name:</label>
            <input type="text" id="roomName" />
            <button id="createRoom">Create</button>
        </div>
        <table id="rooms" style="width: 100%;">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <hr />
    <video id="localVideo" autoplay playsinline width="300"></video>
    <video id="remoteVideo" autoplay playsinline width="300"></video>
</div>

@section Scripts{
    <script src="~/js/signalr/signalr.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/webrtc-adapter/8.2.0/adapter.js" integrity="sha512-+G5yJYBdxKtG8XVXWHlfolgo1GMnwhjt+SPalpBrgjNmxucjWnonqwp7lPYhpEc+R3/endykBJ/TAQ8Xfo9DFw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script type="text/javascript" src="~/js/chat.js"></script>
}    